<% header_content("Link user to #{@organization.name}") %>

<% provide(:title, "Link user to #{@organization.name}") %>

<div id="new_organization_user_container">
  <%= simple_form_for [@organization,@org_user],
                      url: organization_users_path(@organization),
                      html: { class:"devise_form" } do |f| %>
    <div class="form-group">
      <label for="uniqueid" class="col-xs-3 control-label">User</label>
      <div class="col-xs-9">
        <input type="text" id="uniqueid" name="uniqueid" class="form-control user_uniqueid" placeholder="Lookup users by uniqueid">
      </div>
    </div>

    <div class="form-group">
      <div class="col-xs-9 col-xs-offset-3">
        <%= submit_tag 'Add', class: 'btn btn-primary btn-block', id: 'btn-add-user' %>
      </div>
      <div class="col-xs-9 col-xs-offset-3">
        <%= link_to 'Cancel', organization_users_path(@organization), class: 'btn btn-default btn-block' %>
      </div>
    </div>
  <% end %>
</div>