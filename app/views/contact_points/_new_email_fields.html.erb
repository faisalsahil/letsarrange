<div id="new_email_container" class="row">
  <%= simple_form_for ContactPoint.new, remote: true do |f| %>
    <%= f.hidden_field :contact_type, value: 'email' %>
    
    <div class="form-group">
      <%= f.input :description,
                required: false,
                label: false,
                input_html: { type: 'email', class: 'form-control contact-point-description' },
                placeholder: 'Email',
                wrapper_html: { class: 'col-xs-10 col-sm-4 col-md-3 col-lg-2' } %>
    </div>
    
    <div class="form-group inline-actions"><br/>
      <div class="col-xs-12">
        <%= f.submit 'Add email address', class: 'btn btn-link' %>
      </div>
    </div>
  <% end %>
</div>