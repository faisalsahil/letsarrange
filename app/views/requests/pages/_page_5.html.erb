<div class="page" id="request_page_5" style="display:none" data-org-lookup-url="<%= trusted_organizations_path(only_with_resources: true) %>" data-org-users-lookup-url="<%= organization_users_organizations_path %>" data-cp-lookup-url="<%= for_privacy_options_contact_points_path %>">

  <%= render partial: 'subnav', locals: { active: 'options' } %>

  <div class="form-group container org_resource_info" style="<%='display:none' unless current_user %>">
    <h2>This request is for</h2>

    <div class="org_info">
      <div class="form-group">
        <label for="business" class="control-label">Organization</label>
        <div class="">
        <input type="text" class="form-control made_for_organizations_list" data-default-org-uniqueid="<%= current_user.try(:default_org).try(:uniqueid) %>" placeholder="Select or add name">
        </div>
      </div>

      <div class="form-group">
        <label for="" class="control-label">My name at this org</label>
        <div class="">
          <input type="text" class="form-control made_for_org_user_name" data-default-orguser-name="<%= current_user.try(:name) %>" placeholder="Your name at the organization selected above">
        </div>
      </div>
    </div>

    <div class="resource_info">
      <div class="form-group">
        <label for="person" class="control-label">Person</label>
        <div class="">
          <input type="text" class="form-control made_for_resources_list" data-default-orgresource-name="<%= current_user.try(:default_org_resource).try(:name) %>" placeholder="Select or add people">
        </div>
      </div>
    </div>
  </div>

  <div class="form-group container">
    <%= f.input :suppress_initial_message, as: :boolean, label: false, wrapper: false %> <label for="request_suppress_initial_message" class="control-label">I will contact recipients myself; don't send initial messages</label>
  </div>

  <div class="form-group container message_branding_container">
    <%= f.input :message_branding, as: :boolean, label: false, wrapper: false %> <label for="request_message_branding" class="control-label">Make my messages appear personal, rather than coming from lets arrange</label>
  </div>

  <div class="form-group container share_cp_details_container">
    <label class="control-label">Share my contact details:</label>
    <div class="field_container share_cp_details_data_container">
    </div>
  </div>

  <div class="form-group">
    <div class="col-xs-6">
      <button type="button" class="btn btn-default btn-block back_page leave_options_page">
        <i class="fa fa-chevron-left"></i> Go Back
      </button>
    </div>
    <div class="col-xs-6">
      <button type="button" class="btn btn-primary btn-block next_page leave_options_page">
        Next <i class="fa fa-chevron-right"></i>
      </button>
    </div>
  </div>

</div>
