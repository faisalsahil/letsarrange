<div id="msgbar">
  <!-- flash messages -->
  <% flash.each do |key, value| %>
    <% if value != "You need to sign in or sign up before continuing." %>
      <%= content_tag(:div, class: "alert alert-#{ bootstrap_class_for(key)}") do %>
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
        <%= value %>
      <% end %>
    <% end %>
  <% end %>
</div>