<% provide(:title, 'Confirmation instructions') %>
<% header_content('Confirmation instructions') %>

<% provide(:title, 'Resend confirmation instructions') %>
<h2>Resend confirmation instructions</h2>

<%= simple_form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= f.error_notification %>
  <%= f.full_error :confirmation_token %>

  <div class="form-inputs">
    <%= render :partial => 'devise/shared/username', :locals=>{:f=>f } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Resend confirmation instructions", class: "btn-primary" %>
  </div>
<% end %>
