<% provide(:title, 'Forgot your password?') %>
<% content_for :navbar do %>
  <h1 class="larger-header small-font">Forgot your password?</h1>
<% end %>

<%= simple_form_for resource, as: resource_name, url: password_path(resource_name), html: { role: 'form', class: 'devise_form' } do |f| %>
  <div class="form-inputs">
    <div class="form-group">
      <%= f.input :uniqueid,
                  autocomplete: "off",
                  input_html: { autocapitalize: 'off', autocorrect: 'off', class: 'form-control' },
                  placeholder: 'e.g. jamieblack72',
                  label: 'User ID',
                  required: false %>
    </div>
    <div class="form-group">
      <label>Reset using</label>
      <a href="#" data-toggle="modal" data-target="#add_by_phone" class="btn btn-primary">Phone</a>
      <a href="#" data-toggle="modal" data-target="#add_by_email" class="btn btn-primary">Email</a>
    </div>
  </div>
<% end %>

<% content_for(:modal) do %>
  <div id="contact_point_modals">
    <%= render 'add_by_phone_modal' %>
    <%= render 'add_by_email_modal' %>
  </div>
<% end %>
