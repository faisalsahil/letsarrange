  top: 53px;
}

.navbar-header h1{
  /*position: absolute;*/
  left: 58px;
}

#toolbar h1 {
  /*position: absolute;*/
  top: 0;
  right: 44px;
  left: 44px;
  /*height: 44px;*/
}

#open-left {
  background: url("<%= asset_path('open.png') %>") center center no-repeat;
  display: block;
  width: 44px;
  height: 44px;
  position: absolute;
  top: 15px;
  left: 0px;
}

/* menu */
.sub-section a {
  background-color: #008eb9 !important;
  font-size: 12px;
  height: 40px;
}

.sub-section a:hover {
  background-color: #0082b0 !important;
}

#sidebar .main-section a{
  text-indent: 0px !important;
}

.snap-drawer-left {
  width: 200px !important;
}

/* scrolling issue on landing page */
#devise-layout{
  overflow: scroll !important;
}

/* forms */

.field_container:not(.has-changed)  .form-control[readonly]{
  background-color: white;
}

.form-control.as_label {
  background-color: transparent !important;
  border: none !important;
  box-shadow: none !important;
}

.form-group {
  margin-bottom: 6px !important;
}


/* Requests received */
.larger-header{ width: 100% !important;}

.small-font{font-size: 18px !important;}

.modal-backdrop {
  z-index: 1 !important;
}


/* new request */
.bg-red { background:#ff7b54 !important; color:#FFF }

.btn.enabled {
  background: #2dd397;
  color: #FFF;
}

.error_label {
  font-size: 12px;
  color: red;
  float: right;
}

/* contact points */
.add-as-link, #add_both_phones{
  margin-bottom: 10px !important;
}

/* pickers */

.modal-content hr {
  margin-bottom: 0px !important;
}

.modal-content legend {
  font-size: 14px !important;
}

.modal-content .hour, .modal-content .minute, .modal-content .day {
  /* font-size: 16px !important;  */
}

/* landing */
#tutorial h3{
  margin-top: 20px;
  margin-bottom: 20px;
}

.toolbar-navigation .learn-more-container {
  margin-bottom: 20px;
}

/* sign-in */
.landing-form a{
  font-size: 14px;
  color: black !important;
}

.landing-form .user_remember_me {
  font-size: 12px;
  float: right;
}

